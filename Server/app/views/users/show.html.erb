<%= form_for(@user) do |f| %>
  <p id="notice"><%= notice %></p>

  <p>
  <p>
  <b>Username:</b>
  <%= @user.username %>
  </p>
  <p> We hope you are enjoying PushPin</p>
  <b>Friends:</b>
  <ul>
    <%for friendship in @user.friendships %>
      <li>
      <%=h friendship.friend.username %>
      <% if friendship.type=="Pending" %>
        (<i><%= friendship.type %></i>)
      <% end %>
      </li>
    <% end %>
  </ul>

  <p>
  <%= link_to 'Edit', edit_user_path(@user) %> |
  <%= link_to 'Back', users_path %>
<% end %>
